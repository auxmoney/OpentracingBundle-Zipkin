{
  "name": "auxmoney/opentracing-bundle-zipkin",
  "description": "Symfony Opentracing bundle extension for Zipkin tracers",
  "keywords": [
    "auxmoney",
    "opentracing",
    "opentracing-bundle",
    "symfony",
    "symfony-bundle",
    "distributed-tracing",
    "psr-18",
    "zipkin"
  ],
  "type": "symfony-bundle",
  "license": "MIT",
  "replace": {
    "auxmoney/opentracing-bundle-tracer-implementation": "*"
  },
  "require": {
    "php": "^7.1.33",
    "auxmoney/opentracing-bundle-core": "dev-fix-faulty-host-resolver",
    "opentracing/opentracing": "1.0.0-beta5@beta",
    "jcchavezs/zipkin-opentracing": "^0.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^7.5",
    "phpstan/phpstan": "^0.12",
    "squizlabs/php_codesniffer": "^3.5",
    "phpmd/phpmd": "^2.7",
    "php-coveralls/php-coveralls": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "Auxmoney\\OpentracingBundle\\": "./"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Auxmoney\\OpentracingBundle\\Tests\\": "./Tests/"
    }
  },
  "scripts": {
    "quality": [
      "@phpcs",
      "@phpmd",
      "@phpstan",
      "@phpunit"
    ],
    "phpmd": "vendor/bin/phpmd . text cleancode,codesize,controversial,design,naming,unusedcode --exclude vendor,Tests",
    "phpcs": "vendor/bin/phpcs",
    "phpunit": "phpdbg -qrr vendor/bin/phpunit --colors=never",
    "phpstan": "vendor/bin/phpstan analyse --no-progress"
  }
}
